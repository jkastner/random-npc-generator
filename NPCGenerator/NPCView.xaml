<Window x:Class="NPCGenerator.NPCView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NPCView" Height="800" Width="1062"
        Loaded="Window_Loaded"
        Closing="NPCView_Closing"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="500"></RowDefinition>

        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <Separator />
                <MenuItem Header="_Open World..."  Click="OpenWold_MenuItem_Click"/>
                <Separator />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" Click="Exit_MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <ListBox Name="NPCList_ListBox" Grid.Row="2"  SelectionChanged="NPCList_SelectionChanged" HorizontalAlignment="Left" Height="177" Margin="10,48,0,0" VerticalAlignment="Top" Width="497" RenderTransformOrigin="1.119,0.712"/>
        <DataGrid Name="SingleNPC_DataGrid" Grid.Row="2" CanUserSortColumns="False" HorizontalAlignment="Left"   HeadersVisibility="None" Margin="10,300,0,0" VerticalAlignment="Top" Width="497" Height="187"/>


        <Button Name ="NewNPC_Button" Grid.Row="2"  Content="New NPC" HorizontalAlignment="Left" Margin="92,230,0,0" VerticalAlignment="Top" Width="76" Click="NewNPC_Button_Click"/>
        <TextBox Name="SearchBox_TextBox" Grid.Row="1" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="576"/>



    </Grid>
</Window>
