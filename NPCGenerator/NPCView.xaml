<Window x:Class="NPCGenerator.NPCView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NPCView" Height="585.5" Width="1062">
    <Grid>
        <ListBox Name="NPCList_ListBox"  SelectionChanged="NPCList_SelectionChanged" HorizontalAlignment="Left" Height="177" Margin="10,10,0,0" VerticalAlignment="Top" Width="497"/>
        <DataGrid Name="SingleNPC_DataGrid" CanUserSortColumns="False" HorizontalAlignment="Left" Margin="10,300,0,0" VerticalAlignment="Top" Width="497" Height="187"/>
        <ListBox Name="Produced_Traits_TempBox"  HorizontalAlignment="Left" Height="171" Margin="526,16,0,0" VerticalAlignment="Top" Width="230"/>
        <ListBox Name="PossibleNameEthnicities_ListBox"  HorizontalAlignment="Left" Height="331" Margin="526,215,0,0" VerticalAlignment="Top" Width="230" RenderTransformOrigin="0.055,0.463"/>

        <ComboBox x:Name="Gender" Margin="197,192,673,335">
            <ComboBoxItem Content="Random" />
            <ComboBoxItem Content="Male" />
            <ComboBoxItem Content="Female" />
        </ComboBox>
        
        <ListBox Name="GeneratedNames_ListBox" SelectionChanged="NamesSelectionChanged" HorizontalAlignment="Left" Height="198" Margin="782,16,0,0" VerticalAlignment="Top" Width="234"/>
        <Button Name="Generate_Button" Content="Generate" HorizontalAlignment="Left" Margin="10,193,0,0" VerticalAlignment="Top" Width="75" Click="Generate_Button_Click"/>


    </Grid>
</Window>
