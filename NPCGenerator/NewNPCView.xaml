<Window x:Class="NPCGenerator.NewNPCView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewNPCView" Height="800" Width="1062"
        Closing="WindowClosedEvent"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="451*"/>
            <ColumnDefinition Width="603*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <Separator />
                <MenuItem Header="_Open World..."  Click="OpenWold_MenuItem_Click"/>
                <Separator />
                <MenuItem Header="_Save" Click="Save_Button_Click" />
                <Separator />
                <MenuItem Header="_Exit" Click="CloseWindow"/>
            </MenuItem>
        </Menu>

        <ListBox Name="PossibleNameEthnicities_ListBox"  HorizontalAlignment="Left" Height="250" Margin="15,20,0,0" VerticalAlignment="Top" Width="194" RenderTransformOrigin="0.055,0.463"/>
        <ComboBox x:Name="Gender" Margin="209,10,74.224,726"></ComboBox>
        <ListBox Name="GeneratedNames_ListBox" SelectionChanged="NamesSelectionChanged" HorizontalAlignment="Left" Height="178" Margin="394,27,0,0" VerticalAlignment="Top" Width="234" Grid.ColumnSpan="2"/>
        <Button Name="GenerateBunchaTestSubjects" Content="GenTest" HorizontalAlignment="Left" Height="43" Margin="187,275,0,0" VerticalAlignment="Top" Width="48" Click="test100_Click"/>
        <Button Name="Generate_Button" Content="Generate" HorizontalAlignment="Left" Margin="25,358,0,0" VerticalAlignment="Top" Width="75" Click="Generate_Button_Click"/>
        <Label Name ="CurEthnicity_Label" Content="{Binding CurrentEthnicityAndGender}" HorizontalAlignment="Left" Height="30" Margin="394,-3,0,0" VerticalAlignment="Top" Width="234" Grid.ColumnSpan="2"/>
        <Label Name ="CurWorld_Label" Content="{Binding CurrentWorld}" HorizontalAlignment="Left" Height="30" Margin="15,318,0,0" VerticalAlignment="Top" Width="234"/>
        <DataGrid Name="NewNPC_DataGrid" CanUserSortColumns="False" HorizontalAlignment="Left"   HeadersVisibility="None" Margin="261,232,0,0" VerticalAlignment="Top" Width="497" Height="187" Grid.ColumnSpan="2"/>
        <Button Name="Save_Button" Content="Save" HorizontalAlignment="Left" Margin="10,464,0,0" VerticalAlignment="Top" Width="75" Click="Save_Button_Click"/>
        <Button Name="Cancel_Button" Content="Cancel" HorizontalAlignment="Left" Margin="25,514,0,0" VerticalAlignment="Top" Width="75" Click="CloseWindow"/>

    </Grid>
</Window>
